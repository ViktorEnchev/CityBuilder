<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>


  <PropertyGroup Condition=" '$(RunConfiguration)' == 'CityBuilder.API' " />
  <ItemGroup>
    <Folder Include="Data\" />
    <Folder Include="Data\Entities\" />
    <Folder Include="Services\" />
    <Folder Include="Models\" />
    <Folder Include="Models\InputModels\" />
    <Folder Include="Models\OutputModels\" />
    <Folder Include="Data\Migrations\" />
    <Folder Include="Models\InputModels\CityInputModels\" />
    <Folder Include="AutoMapper\" />
    <Folder Include="Models\InputModels\RoadInputModels\" />
    <Folder Include="Models\OutputModels\CityOutputModels\" />
    <Folder Include="Models\OutputModels\RoadOutputModels\" />
    <Folder Include="Models\DTOs\" />
    <Folder Include="Models\DTOs\CityDTOs\" />
    <Folder Include="Models\DTOs\RoadDTOs\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="3.1.8" />
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="3.1.4" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="3.1.8">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="AutoMapper.Extensions.Microsoft.DependencyInjection" Version="8.0.1" />
  </ItemGroup>
</Project>
